<div class="row justify-content-lg-center g-3">
    <h1 style="text-align:center; color:white; margin-top: 15px;"><%= title %> Contact Item</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10 mt-3">
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Name</span>
            <input type="text" class="form-control" placeholder="Enter Contact Name" aria-label="contact Name" aria-describedby="contact Name"
            name="contactName" value="<%= contact.contactName %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">contact number</span>
            <input type="text" class="form-control" placeholder="Enter Contact number" aria-label="contact Brand" aria-describedby="contact Brand"
            name="contactNumber" value="<%= contact.contactNumber %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Email</span>
            <input type="text" class="form-control" placeholder="Enter contact Category" aria-label="contact Category" aria-describedby="contact Category"
            name="contactEmail" value="<%= contact.contactEmail %>" required>
        </div>
            <button type="submit" id="updateButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Update</button>
            <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger btn-primary delete" style="margin-left: 15px;"><i class="fas fa-trash-alt fa-lg"></i> Delete</a>
            <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning" style="margin-left: 15px;"><i class="fas fa-undo"></i> Cancel</a>            
        </div>
    </form>
</div>